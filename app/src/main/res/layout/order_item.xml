<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/border_shap"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="1dp"
    android:layout_margin="5dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingBottom="5dp"


        >


        <Button
            android:id="@+id/detalis_But_orders_rv"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:background="@color/colorAccent3"
            android:text="التفاصيل"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/name_Tv_orders_rv"
            android:layout_width="170dp"
            android:layout_height="22dp"
            android:paddingRight="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="15dp"
            android:text="اسم الحالة :" />

        <TextView
            android:id="@+id/hospital_Tv_orders_rv"
            android:layout_width="170dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="39dp"
            android:paddingRight="5dp"
            android:text="المستشفي :" />

        <TextView
            android:id="@+id/city_Tv_orders_rv"
            android:layout_width="170dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="64dp"
            android:text="المدينة :"

            android:paddingRight="10dp"/>

        <Button
            android:id="@+id/call_Bu_orders_rv"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="60dp"
            android:background="@color/darkgreen"
            android:drawableLeft="@drawable/ic_call_wight_24dp"
            android:text="اتصال"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/type_shap_Tv_orders_rv"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_shap"
            android:paddingLeft="9dp"
            android:paddingTop="3dp"
            android:text="A+"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="52sp"
            android:textStyle="bold" />

    </RelativeLayout>




</android.support.v7.widget.CardView>